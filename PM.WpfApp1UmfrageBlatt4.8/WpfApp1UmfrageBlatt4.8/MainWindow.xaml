<Window x:Class="UmfrageBlatt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UmfrageBlatt"
        mc:Ignorable="d"
        Title="Umfrage Blatt // Schüler" Height="600" Width="800"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="TextBoxWithPlaceholder" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <TextBlock x:Name="Placeholder"
                                   Text="{TemplateBinding Tag}"
                                   Foreground="Gray"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Placeholder anzeigen, wenn Text leer und nicht fokussiert -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsKeyboardFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                            <!-- Placeholder ausblenden, wenn Text vorhanden oder Feld fokussiert -->
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid RenderTransformOrigin="0.553,0.405">
        <TextBox x:Name="txtSchuhlerId" Style="{StaticResource TextBoxWithPlaceholder}" Tag="Schüler-ID" HorizontalAlignment="Left" Margin="35,95,0,0" VerticalAlignment="Top" Width="120" Height="22"/>
        <TextBox x:Name="txtVorname" Style="{StaticResource TextBoxWithPlaceholder}" Tag="Vorname" HorizontalAlignment="Left" Margin="35,122,0,0" VerticalAlignment="Top" Width="120" Height="22"/>
        <TextBox x:Name="txtNachname" Style="{StaticResource TextBoxWithPlaceholder}" Tag="Nachname" HorizontalAlignment="Left" Margin="35,149,0,0" VerticalAlignment="Top" Width="120" Height="22"/>
        <TextBox x:Name="txtKlassenstufe" Style="{StaticResource TextBoxWithPlaceholder}" Tag="Klassenstufe" HorizontalAlignment="Left" Margin="35,176,0,0" VerticalAlignment="Top" Width="120" Height="22"/>
        <TextBox x:Name="txtUsername" Style="{StaticResource TextBoxWithPlaceholder}" Tag="Username" HorizontalAlignment="Left" Margin="35,203,0,0" VerticalAlignment="Top" Width="120" Height="22"/>
        <TextBox x:Name="txtPasswort" Style="{StaticResource TextBoxWithPlaceholder}" Tag="Passwort" HorizontalAlignment="Left" Margin="35,230,0,0" VerticalAlignment="Top" Width="120" Height="22"/>

        <Grid HorizontalAlignment="Left" Margin="190,244,0,0" VerticalAlignment="Top" Width="120" Height="22"/>




        <TextBlock TextWrapping="Wrap" Text="Umfrageformular" Margin="0,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="16" IsEnabled="False" IsHitTestVisible="False"/>






        <Label Content="Erstwahl" HorizontalAlignment="Left" Margin="420,335,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.169,0.271"/>
        <ComboBox x:Name="cmbErstwahl" HorizontalAlignment="Left" Margin="497,340,0,0" VerticalAlignment="Top" Width="120"/>

        <Label Content="Zweitwahl" HorizontalAlignment="Left" Margin="415,376,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbZweitwahl" HorizontalAlignment="Left" Margin="497,380,0,0" VerticalAlignment="Top" Width="120"/>

        <Label Content="Drittwahl" HorizontalAlignment="Left" Margin="415,413,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbDrittwahl" HorizontalAlignment="Left" Margin="497,417,0,0" VerticalAlignment="Top" Width="120"/>

        <Button Content="Ausgeben" HorizontalAlignment="Left" Margin="35,303,0,0" VerticalAlignment="Top" Width="120" Click="BtnAusgeben_Click"/>
        <TextBox x:Name="txtAusgabe" HorizontalAlignment="Left" Margin="35,376,0,0" VerticalAlignment="Top" Width="253" Height="164" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button Name="PushDBButton" Content="Push to DB" HorizontalAlignment="Left" Margin="35,340,0,0" VerticalAlignment="Top" Width="120" Click="PushDBButton_Click"/>
        <TextBox Name="TextBox1" HorizontalAlignment="Left" Margin="226,95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="507" Height="184"/>


    </Grid>
</Window>