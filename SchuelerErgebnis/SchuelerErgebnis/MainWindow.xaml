<Window x:Class="SchuelerErgebnis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchuelerErgebnis"
        mc:Ignorable="d"
        Title="Kurszuteilung" Height="500" Width="800" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button x:Name="BTNAusgaben" Grid.Row="0" Content="Kurszuteilung starten und Ergebnisse anzeigen" 
                Click="BTNAusgaben_Click" Padding="10" FontWeight="Bold"/>

        <TabControl x:Name="MainTabControl" Grid.Row="1" Margin="0,10,0,0">
            <TabItem Header="Protokoll">
                <ListBox x:Name="ProtokollListBox"/>
            </TabItem>
            <TabItem Header="Ergebnisse" x:Name="ErgebnisTab">
                <DataGrid x:Name="ErgebnisDataGrid" 
                          IsReadOnly="True" 
                          AutoGenerateColumns="True"
                          AlternatingRowBackground="LightGray"/>
            </TabItem>
        </TabControl>

        <TextBlock x:Name="StatusTextBlock" Grid.Row="2" Text="Bereit." Margin="0,5,0,0"/>

    </Grid>
</Window>